<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property> <!--Dialecto para la conexión-->
        <property name="hbm2ddl.auto">create</property><!--como se va a comportar Hibernate con la bbdd-->
        <property name="connection.url">jdbc:mysql://192.168.2.10:3306/moliGest</property><!--Definición de a dónde nos vamos a conectar-->
        <property name="connection.username">admin</property><!--Usuario con el que nos vamos a conectar-->
        <property name="connection.password">Miquel1979</property><!--contraseña del usuario conectar-->

        <!--Mapeo de los ficheros de configuración para cada una de las clases-->

        <mapping resource="Users.hbm.xml"/>
        <mapping resource="Roles.hbm.xml"/>
        <mapping resource="Socios.hbm.xml"/>
        <mapping resource="Facturas.hbm.xml"/>
        <mapping resource="LineasFacturas.hbm.xml"/>
        <mapping resource="Productos.hbm.xml"/>
        <mapping resource="Proveedores.hbm.xml"/>
        <mapping resource="Pedidos.hbm.xml"/>
        <mapping resource="LineasPedidos.hbm.xml"/>
        <mapping resource="Eventos.hbm.xml"/>
		<mapping resource="Ingresos.hbm.xml"/>
		<mapping resource="Gastos.hbm.xml"/>
		<mapping resource="Bancos.hbm.xml"/>        


    </session-factory>
</hibernate-configuration>