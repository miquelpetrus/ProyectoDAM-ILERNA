<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!--Mapeo de la clase Alumno con la tabla alumnos-->
<hibernate-mapping>
    <class name="clases.Socios" table="socios" catalog="moliGest">
        <id name="id">
			<column name="id" />
			<generator class="increment" />
        </id>
		<property name="nombre" />
		<property name="apellido1" />
		<property name="apellido2" />
		<property name="nif" />
		<property name="direccion" />
		<property name="telefono" />
		<property name="email" />
		<property name="fechaNacimiento" />
		<property name="fechaAlta" />
		<property name="fechaBaja" />
        
        <!--Con sultado en https://mkyong.com/hibernate/hibernate-many-to-many-relationship-example/ -->
