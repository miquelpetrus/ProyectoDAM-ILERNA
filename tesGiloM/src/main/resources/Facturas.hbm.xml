<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!--Mapeo de la clase Alumno con la tabla alumnos-->
<hibernate-mapping>
    <class name="clases.Facturas" table="facturas" catalog="moliGest">
        <id name="id">
            <column name="id"/>
            <generator class="increment"/>
        </id>
        <property name="idFactura"/>
        <property name="idProveedor"/>
        <property name="fecha"/>
        <property name="baseImponible"/>
        <property name="iva"/>
        <property name="total"/>
        <property name="pagado"/>
        <property name="idUser"/>
        <property name="idEvento"/>
        <property name="formaDePago"/>
        
        <!-- Mapeo de la clase Facturas con la tabla facturas
	    <set name="lineasFacturas" table="lineas_facturas" cascade="all">
	        <key column="idFactura" />
	        <one-to-many class="clases.LineasFacturas" />
	    </set> -->
        
    </class>
</hibernate-mapping>
        
        